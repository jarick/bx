!!!
%html
  %head
    %meta(charset=$view['charset'])/
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")/
    %title =$view['page_title']
    %link(href="/css/bootstrap.css" rel="stylesheet")/
    %link(href="/css/font-awesome.css" rel="stylesheet")/
    - if(isset($view['css']))
      - foreach($view['css'] as $css)
        %link(rel="stylesheet" href=$css)/
    %script(type="text/javascript" src="/js/jquery.js")
    - if(isset($view['head_js']))
      - foreach($view['head_js'] as $js)
        %script(type="text/javascript" src=$js)
  %body
    #wrapper
      %nav(class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0")
        .navbar-header
          %button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse")
            %span(class="sr-only") 
              Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a(class="navbar-brand" href="index.html") =$view['title']
        %ul(class="nav navbar-top-links navbar-right")
          %li(class="dropdown")
            %a(class="dropdown-toggle" data-toggle="dropdown" href="#")
              %i(class="fa fa-user fa-fw")
              %i(class="fa fa-caret-down")
            %ul(class="dropdown-menu dropdown-tasks")
              %li
                %a(href="/admin/user/edit?ID=1")
                  %i(class="fa fa-user fa-fw")
                  Профиль
                %a(href="/admin/settings")
                  %i(class="fa fa-gear fa-fw")
                  Настройки
              %li.divider
              %li 
                %a(href="/admin/logout")
                  %i(class="fa fa-sign-out fa-fw")
                    Выход
        -#
          %ul(class="nav navbar-top-links navbar-right")
            %li(class="dropdown")
              %a(class="dropdown-toggle" data-toggle="dropdown" href="#")
                %i(class="fa fa-envelope fa-fw")
                %i(class="fa fa-caret-down")
              %ul(class="dropdown-menu dropdown-messages")
                %li
                  %a(href="#")
                    %div
                      %strong John Smith
                      %span(class="pull-right text-muted")
                        %em Yesterday
                    %div 
                      Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque eleifend...
                %li(class="divider")
                %li
                  %a(href="#")
                    %div
                      %strong John Smith
                      %span(class="pull-right text-muted")
                        %em 
                          Yesterday
                    %div 
                      Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque eleifend...
          %ul(class="nav navbar-top-links navbar-right")
            %li(class="dropdown")
              %a(class="dropdown-toggle" data-toggle="dropdown" href="#")
                %i(class="fa fa-tasks fa-fw")
                %i(class="fa fa-caret-down")
              %ul(class="dropdown-menu dropdown-tasks")
                %li
                  %a(href="#")
                    %div
                      %p
                        %strong Task 1
                        %span(class="pull-right text-muted")
                          40% Complete
                      %div(class="progress progress-striped active")
                        %div(class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%")
                          %span(class="sr-only")40% Complete (success)
                %li(class="divider")
                %li
                  %a(href="#")
                    %div
                      %p
                        %strong Task 1
                        %span(class="pull-right text-muted")
                          40% Complete
                      %div(class="progress progress-striped active")
                        %div(class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%")
                          %span(class="sr-only")
                            40% Complete (success)
          %ul(class="nav navbar-top-links navbar-right")
            %li(class="dropdown")
              %a(class="dropdown-toggle" data-toggle="dropdown" href="#")
                %i(class="fa fa-bell fa-fw")
                %i(class="fa fa-caret-down")
              %ul(class="dropdown-menu dropdown-tasks")
                %li
                  %a(href="#")
                    %div
                      %i(class="fa fa-comment fa-fw") New Comment
                      %span(class="pull-right text-muted small")
                        4 minutes ago
                %li(class="divider")
                %li
                  %a(href="#")
                    %div
                      %i(class="fa fa-comment fa-fw") New Comment
                      %span(class="pull-right text-muted small")
                        4 minutes ago

        %div(class="navbar-default navbar-static-side" role="navigation")
          %div(class="sidebar-collapse")
            %ul(class="nav" id="side-menu")
              %li(class="sidebar-search")
                %div(class="input-group custom-search-form")
                  %input(type="text" class="form-control" placeholder="Поиск...")
                  %span(class="input-group-btn")
                    %button(class="btn btn-default" type="button")
                      %i(class="fa fa-search")
              - foreach($this['layout']['menu'] as $key => $item)
                %li(class=((strpos($view->request()->getPathInfo(),$item['href']) === 0) ? "active" : ""))
                  - if(isset($item['items']))
                    %a(href="#")
                      %i(class="fa #{$key} fa-fw") 
                      =$item['name']
                      %span(class="fa arrow")
                    %ul(class=((strpos($view->request()->getPathInfo(),$item['href']) === 0) ? "nav nav-second-level in" : "nav nav-second-level"))
                      - foreach($item['items'] as $sub_key => $sub_item)
                        %li
                          %a(class=((strpos($view->request()->getPathInfo(),$sub_item['href']) === 0) ? "active" : "") href=$sub_item['href'])
                            =$sub_item['name']
                  -else
                    %a(href=$item['href'])
                      %i(class="fa #{$key} fa-fw") 
                      =$item['name']
      %div(id="page-wrapper")
        =$page            
    %script(type="text/javascript" src="/js/bootstrap.js")
    - if(isset($view['footer_js']))
      - foreach($view['footer_js'] as $js)
        %script(type="text/javascript" src=$js)
